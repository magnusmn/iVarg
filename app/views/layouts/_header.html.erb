<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "iVarg", root_path, id: "logo" %> 
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "All adds", root_path %></li>
          <% if current_user && current_user.admin? %>
            <li><%= link_to "All users", users_path %></li>
          <% end %>
          <% if signed_in? %>
            <li><%= link_to "My place", @current_user %></li>
            <li><%= link_to "New advert", new_advert_path %></li>
            <li><%= link_to "Sign out #{@current_user.name}", signout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
            <li><%= link_to "New user", signup_path %></li>
          <% end %>
          <li><%= link_to "Help", help_path %></li>
        </ul>  
      </nav>
    </div>
  </div>
</header>
